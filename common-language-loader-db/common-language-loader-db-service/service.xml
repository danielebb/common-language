<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="it.dbb.common.language.loader.db">
	<author>danielebb</author>
	<namespace>CLL</namespace>

	<entity name="Language" local-service="true" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="languageId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="key" type="String" />
		<column name="languageCode" type="String" />
		<column name="value" type="String" />

		<!-- Order -->

		<!-- Finder methods -->

		<finder name="LanguageCode" return-type="Collection">
			<finder-column name="languageCode" />
		</finder>
		
		<finder name="LanguageCodeKey" return-type="Language" unique="true">
			<finder-column name="languageCode" />
			<finder-column name="key" />
		</finder>

		<!-- References -->

	</entity>
</service-builder>